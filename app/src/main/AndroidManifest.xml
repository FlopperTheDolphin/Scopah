<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.scopah">

    <application
        android:name=".utils.AppContext"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Scopah">
        <activity
            android:name=".WizardActivity"
            android:label="@string/bonus"/>
        <activity
            android:name=".LeaderboardActivity"
            android:label="@string/leaderboard" />
        <activity
            android:name=".GameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ViewMatchesActivity"
            android:label="@string/past_games" />
        <activity
            android:name=".ResumeActivity"
            android:label="@string/saved_games" />
        <activity
            android:name=".PlayActivity"
            android:label="@string/players" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/settings" />
        <activity android:name=".MenuActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>